@using AuctionProject.Areas.Admin.ViewModelsAdmin.Brands

@model BrandCreateVM


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Brands</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 <div class="form-group">
                    <label asp-for="BrandName" >Name</label>
                    <input asp-for="BrandName" type="text" class="form-control" placeholder="Name">
                    <span  class="text-danger mt-2" asp-validation-for="BrandName"></span>
                </div>
                
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <a class="btn btn-light" asp-area="Admin" asp-controller="Brands" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>